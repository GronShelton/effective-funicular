
set name zfah_prison_demon
set display Silencing the Demon
set author Ermiel
set questtype normal_killer1
set category 
set instructions I haven`t slept in so long. Please, help me..

set wait 1
set interval 1
quiet

set area "AdventureHousePrison"
set room AdventureHousePrison#6
set mobgroup
set mob reselect prisoner
give stat keyplayer true
give script LOAD=zfah_prison_demon_announcer.script

set duration 0

